<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/img_club"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/img_madrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Real Madrid"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/img_club"
        app:layout_constraintTop_toTopOf="@id/img_club"
        app:layout_constraintBottom_toBottomOf="@id/img_club"
        android:layout_marginLeft="10dp" />

</android.support.constraint.ConstraintLayout>